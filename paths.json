{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "typeRoots": ["./src/types", "../../node_modules/@types"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.d.ts",
    "../../types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "build", "dist"]
}
